header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            button.nav__el(id='logout') Log out
            a.nav__el(href='#') My bookings
            a.nav__el(href='/me')
                img(src=`/img/users/${user.photo}`, alt=`${user.name} photo`).nav__user-img
                span= user.name
        else
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign Up